{
  "manifest_version": 3,
  "name": "QuickRewriter",
  "version": "1.0",
  "description": "Simplifies and rephrases web content for clarity and accessibility.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://monkfish-app-wbxiw.ondigitalocean.app/*"
  ]
}
